<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimaryDark">@color/primary</item>
    </style>

    <style name="Theme.MyApplication" parent="Base.Theme.MyApplication">
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="appBarLayoutStyle">@style/AppBar</item>
    </style>

    <style name="Toolbar" parent="Widget.Material3.Toolbar">
       <item name="titleCentered">true</item>
        <item name="titleTextColor">@color/white</item>
        <item name="titleTextAppearance">@style/TextTitleToolbar</item>
    </style>

    <style name="TextTitleToolbar">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppBar" parent="Widget.Design.AppBarLayout">
        <item name="elevation">0dp</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="circularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>